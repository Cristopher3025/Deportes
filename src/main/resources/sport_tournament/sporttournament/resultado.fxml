<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="sport_tournament.sporttournament.ResultadoController"
            prefWidth="600" prefHeight="400">

    <children>
        <Label layoutX="240" layoutY="10" text="Partido pendiente"/>
        <ComboBox fx:id="comboPartidos" layoutX="200" layoutY="30" prefWidth="250"/>

        <Label layoutX="160" layoutY="80" fx:id="lblEquipo1"/>
        <TextField fx:id="tf_goles1" layoutX="160" layoutY="100" prefWidth="50"/>

        <Label layoutX="370" layoutY="80" fx:id="lblEquipo2"/>
        <TextField fx:id="tf_goles2" layoutX="370" layoutY="100" prefWidth="50"/>

        <Button layoutX="250" layoutY="150" text="Registrar resultado" onAction="#registrarResultado"/>

        <Label fx:id="lbl_mensaje" layoutX="200" layoutY="200" textFill="green"/>
    </children>
</AnchorPane>

