<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="sport_tournament.sporttournament.MainController">

    <left>
    <VBox fx:id="menuLateral" spacing="10" alignment="TOP_LEFT" styleClass="menu-lateral">
        <padding>
            <Insets top="20" left="10" right="10" bottom="10"/>
        </padding>

        <Label text="⚙ Menú principal" styleClass="titulo-menu"/>

        <Button text="🏀 Deportes" onAction="#mostrarDeportes" maxWidth="180" />
        <Button text="👥 Equipos" onAction="#mostrarEquipos" maxWidth="180"/>
        <Button text="🏆 Torneos" onAction="#mostrarTorneos" maxWidth="180"/>
        <Button text="📊 Estadísticas" onAction="#mostrarEstadisticas" maxWidth="180"/>
        <Button text="🏅 Certificados" onAction="#mostrarCertificados" maxWidth="180"/>
        
        <Separator />

        <Button text="ℹ Sobre el creador" onAction="#mostrarInformacionCreador" maxWidth="180"/>
        <Button text="❌ Salir" onAction="#salirAplicacion" maxWidth="180"/>
    </VBox>
</left>


    <center>
        <AnchorPane fx:id="contenidoPrincipal"/>
    </center>
</BorderPane>
