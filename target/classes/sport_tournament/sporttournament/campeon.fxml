<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="sport_tournament.sporttournament.CampeonController"
            prefWidth="600" prefHeight="450"
            stylesheets="@../styles/sport-theme.css">

    <VBox alignment="CENTER" spacing="20" layoutX="50" layoutY="30"
          prefWidth="500" prefHeight="400"
          AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50"
          AnchorPane.topAnchor="30" AnchorPane.bottomAnchor="30"
          styleClass="campeon-contenedor">

        <ImageView fx:id="imgEquipo" fitHeight="150" fitWidth="150" preserveRatio="true"/>

        <Label fx:id="lblNombreEquipo"
               styleClass="campeon-nombre"
               maxWidth="500" wrapText="true"/>

        <Label text="¡FELICIDADES, CAMPEÓN!"
               styleClass="campeon-titulo" maxWidth="500"/>

        <Label text="Sistema desarrollado por Cristopher Ureña"
               styleClass="firma-desarrollador" />

        <Label text="Universidad Nacional – Campus Coto"
               styleClass="firma-institucion" />

    </VBox>
</AnchorPane>



