            fx:controller="sport_tournament.sporttournament.CampeonController"
            prefWidth="600" prefHeight="400">

    <ImageView fx:id="imgEquipo" fitHeight="150" fitWidth="150"
               layoutX="225" layoutY="50" />

    <Label fx:id="lblNombreEquipo" layoutX="50" layoutY="220" prefWidth="500"
           style="-fx-text-fill: gold; -fx-font-weight: bold;" alignment="center">
        <font>
            <Font name="Arial Black" size="24"/>
        </font>
    </Label>

    <Label text="¡FELICIDADES, CAMPEÓN!" layoutX="50" layoutY="270" prefWidth="500"
           style="-fx-text-fill: red;" alignment="center">
        <font>
            <Font size="28"/>
        </font>
    </Label>
</AnchorPane>


