<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="sport_tournament.sporttournament.SportController">
    <children>
        <Label layoutX="230.0" layoutY="20.0" text="Nombre del Deporte"/>
        <TextField fx:id="tf_sport_name" layoutX="200.0" layoutY="40.0" prefWidth="200"/>

        <Button layoutX="70.0" layoutY="90.0" text="Agregar" onAction="#agregarNombre"/>
        <Button layoutX="170.0" layoutY="90.0" text="Buscar" onAction="#buscarNombre"/>
        <Button layoutX="270.0" layoutY="90.0" text="Modificar" onAction="#modificarNombre"/>
        <Button layoutX="370.0" layoutY="90.0" text="Eliminar" onAction="#eliminarNombre"/>

        <Label fx:id="lbl_mensaje" layoutX="200.0" layoutY="130.0" textFill="green"/>

        <TableView fx:id="tablaDeportes" layoutX="50.0" layoutY="160.0" prefWidth="500.0" prefHeight="200.0">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="100"/>
                <TableColumn fx:id="colNombre" text="Nombre del Deporte" prefWidth="200"/>
                <TableColumn fx:id="colImagen" text="Ruta Imagen" prefWidth="200"/>
            </columns>
        </TableView>
    </children>
</AnchorPane>

