<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="450.0" prefWidth="650.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="sport_tournament.sporttournament.ResultadoController">

    <children>

        <!-- Título -->
        <Label layoutX="180" layoutY="10" text="⚽ Registro de Resultados"
               style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

        <Separator layoutX="50" layoutY="40" prefWidth="550"/>

        <!-- Selección de partido -->
        <Label layoutX="50" layoutY="60" text="Selecciona un partido pendiente:"/>
        <ComboBox fx:id="comboPartidos" layoutX="50" layoutY="80" prefWidth="550"/>

        <Separator layoutX="50" layoutY="110" prefWidth="550"/>

        <!-- Registro de goles -->
        <Label fx:id="lblEquipo1" layoutX="120" layoutY="140" text="Equipo 1"/>
        <TextField fx:id="tf_goles1" layoutX="120" layoutY="160" prefWidth="80"/>

        <Label fx:id="lblEquipo2" layoutX="420" layoutY="140" text="Equipo 2"/>
        <TextField fx:id="tf_goles2" layoutX="420" layoutY="160" prefWidth="80"/>

        <Separator layoutX="50" layoutY="200" prefWidth="550"/>

        <!-- Botón de registro -->
        <Button layoutX="260" layoutY="220" text="✅ Registrar Resultado"
                style="-fx-font-size: 14px; -fx-background-color: #0078D7; -fx-text-fill: white;"
                onAction="#registrarResultado"/>

        <!-- Mensaje -->
        <Label fx:id="lbl_mensaje" layoutX="200" layoutY="260" textFill="green"/>

    </children>
</AnchorPane>


